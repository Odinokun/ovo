extends ../_template

mixin team-list__item(ava)
  //begin team-list__item
  li.team-list__item
    a(href="#").team-list__link
      .team-list__ava
        img(src="assets/img/team-" + ava + ".jpg" alt="doctor")
      .team-list__descr
        .team-list__name.title-24 Семчишин Роксолана Олександрівна
        .team-list__position Репродуктолог, завідувач клініки OVO life, мама двох хлопців
  //end team-list__item

block variables
  - var pageTitle = 'Медична команда'

block content
  .main-wrap.no-js
    include ../sections/header
    include ../sections/header-mob
    include ../sections/underheader

    //begin content
    main.main.team
      include ../sections/page-top-pic--team
      include ../sections/page-title
      .container
        //begin team__menu
        ul.team__menu.team-menu
          li.team-menu__item.active
            a(href="#").team-menu__link Вся медична команда
          li.team-menu__item
            a(href="#").team-menu__link Репродуктолог
          li.team-menu__item
            a(href="#").team-menu__link Гінеколог
          li.team-menu__item
            a(href="#").team-menu__link Ембріолог
          li.team-menu__item
            a(href="#").team-menu__link Генетик
          li.team-menu__item
            a(href="#").team-menu__link Супровід пацієнта
        //end team__menu

      .container
        //begin team__list
        ul.team__list.team-list
          +team-list__item('01')
          +team-list__item('02')
          +team-list__item('03')
          +team-list__item('04')
          +team-list__item('05')
          +team-list__item('06')
          +team-list__item('02')
          +team-list__item('03')
        //end team__list
    //end content

    include ../sections/footer
    include ../sections/scripts