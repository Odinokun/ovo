block variables
  - var pageTitle = "Ціни"

block content
  .main-wrap.no-js
    include ../sections/header
    include ../sections/header-mob
    include ../sections/underheader

    //begin content
    main.main.price
      include ../sections/page-top-pic
      include ../sections/page-title

      .container
        //begin price__switcher
        .price__switcher.price-switcher
          label.price-switcher__btn
            input(type='radio' name='price' value='01' checked)
            span Діагностика
          label.price-switcher__btn
            input(type='radio' name='price' value='02')
            span Лікуванння
        //end price__switcher

        //begin price
        .price-accordion.price-accordion--01.active
          +price__row('01', 'Безпліддя')
          +price__row('02', "Жіноче здоров'я")
          +price__row('03', "Чоловіче здоров'я")
          +price__row('04', 'Вагітність')
        //end price

        //begin price
        .price-accordion.price-accordion--02
          +price__row('04', 'Вагітність')
          +price__row('03', "Чоловіче здоров'я")
          +price__row('02', "Жіноче здоров'я")
          +price__row('01', 'Безпліддя')
          +price__row('03', "Чоловіче здоров'я")
          +price__row('04', 'Вагітність')
        //end price


    //end content

    include ../sections/footer
    include ../sections/scripts