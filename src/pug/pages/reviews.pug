extends ../_template

mixin review-item(pic)
  .review__item.review-item
    .review-item__ava
      img(src="assets/img/review-" + pic + ".jpg" alt="picture")
    .review-item__descr
      h3.review-item__name.title-32 Семчишин Роксолана
      .review-item__text
        p Репродуктивне здоров’я. Два слова, від яких залежить так багато у нашому житті. Цим терміном позначають здатність зачати та народити здорову дитину. Нажаль, не кожен з нас має таку

block variables
  - var pageTitle = 'Відгуки'

block content
  .main-wrap.no-js
    include ../sections/header
    include ../sections/header-mob
    include ../sections/underheader

    //begin content
    main.main.review
      include ../sections/page-top-pic
      include ../sections/page-title

      .container
        .review-item__list
          +review-item('01')
          +review-item('02')
          +review-item('03')
          +review-item('04')
    //end content

    include ../sections/footer
    include ../sections/scripts